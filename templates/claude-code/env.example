# ===========================================
# {{PROJECT_NAME}} Environment Configuration
# ===========================================
# Copy this file to .env and replace {{PLACEHOLDERS}} with actual values
# NEVER commit .env to version control

# ===========================================
# Application Configuration
# ===========================================
ENVIRONMENT={{ENVIRONMENT}}
DEBUG={{DEBUG}}
HOST={{HOST}}
PORT={{PORT}}

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL (if using traditional DB)
DATABASE_URL=postgresql://{{DB_USER}}:{{DB_PASSWORD}}@{{DB_HOST}}:{{DB_PORT}}/{{DB_NAME}}

# ZeroDB Direct API Access (for backend services)
# Get these from your ZeroDB/AINative dashboard
ZERODB_PROJECT_ID={{ZERODB_PROJECT_ID}}
ZERODB_API_KEY={{ZERODB_API_KEY}}
ZERODB_API_URL=https://api.ainative.studio

# ===========================================
# Authentication
# ===========================================
# Generate a secure random string for production
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY={{JWT_SECRET_KEY}}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OAuth Providers (optional)
LINKEDIN_CLIENT_ID={{LINKEDIN_CLIENT_ID}}
LINKEDIN_CLIENT_SECRET={{LINKEDIN_CLIENT_SECRET}}
LINKEDIN_REDIRECT_URI=http://localhost:{{PORT}}/api/v1/auth/linkedin/callback

GOOGLE_CLIENT_ID={{GOOGLE_CLIENT_ID}}
GOOGLE_CLIENT_SECRET={{GOOGLE_CLIENT_SECRET}}

# ===========================================
# AI Providers
# ===========================================
OPENAI_API_KEY={{OPENAI_API_KEY}}
ANTHROPIC_API_KEY={{ANTHROPIC_API_KEY}}

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSIONS=384

# ===========================================
# External Services (optional)
# ===========================================
# Twilio SMS
TWILIO_ACCOUNT_SID={{TWILIO_ACCOUNT_SID}}
TWILIO_AUTH_TOKEN={{TWILIO_AUTH_TOKEN}}
TWILIO_PHONE_NUMBER={{TWILIO_PHONE_NUMBER}}

# Strapi CMS (if using)
STRAPI_URL={{STRAPI_URL}}
STRAPI_API_TOKEN={{STRAPI_API_TOKEN}}

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:{{PORT}}

# ===========================================
# Logging
# ===========================================
LOG_LEVEL={{LOG_LEVEL}}
LOG_FORMAT=json
